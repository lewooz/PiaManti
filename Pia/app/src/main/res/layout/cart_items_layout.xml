<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:padding="10dp">

        <TextView
            android:id="@+id/cart_quantity"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Adet"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:textAlignment="viewEnd"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cart_name"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Ürün Adı"
            android:textSize="15dp"

            android:layout_alignParentStart="true"
            android:textAlignment="viewStart"

            android:textStyle="bold"/>
        <TextView
            android:id="@+id/cart_sarımsak_durumu"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Sarımsak Durumu"
            android:textSize="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cart_name"
            android:textAlignment="viewStart"
            android:textStyle="italic"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/teslimat"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Teslimat"
            android:textSize="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cart_name"
            android:textAlignment="viewStart"
            android:textStyle="italic"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/cart_sos_durumu"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Sos Durumu"
            android:textSize="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cart_sarımsak_durumu"
            android:textAlignment="viewStart"
            android:textStyle="italic"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/cart_porsiyon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="1 Porsiyon"
            android:textSize="15dp"
            android:layout_marginLeft="6dp"

            android:layout_toRightOf="@id/cart_name"
            android:gravity="center"
            android:layout_centerHorizontal="true"

            android:textStyle="bold"/>
        <TextView
            android:id="@+id/cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="20₺"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/cart_porsiyon"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/cart_bin"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@id/cart_quantity"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/cartbin"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>