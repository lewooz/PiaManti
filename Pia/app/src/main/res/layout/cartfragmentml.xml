<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alert_dialog_loading"

    >
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/sipariş_durum_animation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:lottie_fileName="siparisonay.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/sipariş_durum_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siparişiniz onay aşamasında."
        android:layout_below="@+id/sipariş_durum_animation"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/üst_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_above="@id/sipariş_onayla_button"
        android:padding="14dp">

        <TextView
            android:id="@+id/toplam_ücret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:text="Toplam Ücret:"
            android:gravity="center"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_recycle"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"

        android:layout_above="@id/üst_relative">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/sipariş_onayla_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAccent"
        android:fontFamily="@font/cantata_one"
        android:text="SON ADIMA GEÇ"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

</RelativeLayout>