<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    android:outlineAmbientShadowColor="#00090606">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_sc_medium"
            android:text="ÜRÜNLERİMİZ"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="30dp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView

        android:id="@+id/slider_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:cardBackgroundColor="#000"
        app:cardCornerRadius="6dp">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSlider"
            android:layout_width="wrap_content"
            android:layout_height="184dp"
            android:layout_marginTop="10dp"
            android:onClick="manti"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderCircularHandlerEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="30dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="2dp"
            app:sliderIndicatorRadius="1.5dp"
            app:sliderIndicatorSelectedColor="#cd1f26"
            app:sliderIndicatorUnselectedColor="#000000"
            app:sliderScrollTimeInSec="4"
            app:sliderStartAutoCycle="true" />

    </androidx.cardview.widget.CardView>



    <ImageView
        android:id="@+id/kiloluk_urunler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slider_card"
        android:layout_marginTop="15dp"
        android:src="@drawable/kilolukurunler"
        android:onClick="kilolukurunler"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kiloluk_urunler"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/josefin_sans_bold"
        android:text="Kiloluk ürün siparişleriniz bir gün önceden alınır."

        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="25dp" />

</RelativeLayout>





