<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uyegiris"
    android:background="@drawable/mainbackground">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:src="@drawable/piaaa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <com.rey.material.widget.Button
        android:id="@+id/zaten_uye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/buttons"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Zaten üyemisiniz? Giriş Yapın"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="login"/>


    <com.rey.material.widget.Button
        android:id="@+id/uye_olun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/zaten_uye"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:text="Üye Olun"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:onClick="uyeol"/>

</RelativeLayout>